---
import { Icon } from 'astro-icon/components'
type Props = {
	title: string
	body: string
	href: string
}

const { title, body, href } = Astro.props
---

<a
	href={href}
	target="_blank"
	class="flex items-center justify-between gap-2 rounded-md bg-zinc-800 p-4 hover:bg-zinc-700"
>
	<div class="flex items-baseline gap-4">
		<h3 class="text-base font-semibold text-zinc-50">{title}</h3>
		<p class="text-sm text-zinc-400">{body}</p>
	</div>
	<Icon name="outward" />
</a>
